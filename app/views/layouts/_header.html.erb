<header class="navbar navbar-fixed-top navbar-default">
  <div class="container">
    <%= link_to t("project1"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("home"), root_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("users"),
            current_user.is_admin? ? admin_users_path : users_path %></li>
          <li><%= link_to t("categories"),
            current_user.is_admin? ? admin_categories_path : categories_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t :account %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("user_menu.profile"), current_user %></li>
              <li><%= link_to t("user_menu.setting"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("user_menu.logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("login"), login_path %></li>
          <li><%= link_to t("signup"), signup_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
